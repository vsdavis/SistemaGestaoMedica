@model SistemaGestaoMedica.Models.Paciente

@{
    ViewData["Title"] = "Cadastrar Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<style>
    .create-card {
        max-width: 900px;
        margin: 40px auto;
        padding: 32px;
        border-radius: 16px;
        background: #ffffff;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
    }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 12px;
    }

    .btn-custom {
        border-radius: 12px;
        padding: 10px 24px;
        font-weight: 500;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .header-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 24px;
        color: #333;
    }
</style>

<div class="create-card">
    <div class="header-title"><i class="bi bi-person-plus-fill"></i> Cadastrar Paciente</div>

    <form asp-action="Create">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Nome" class="form-label"><i class="bi bi-person-fill"></i> Nome Completo</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo do paciente" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Cpf" class="form-label"><i class="bi bi-credit-card-fill"></i> CPF</label>
                <input asp-for="Cpf" class="form-control" id="cpf" placeholder="Ex: 123.456.789-00" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DataNascimento" class="form-label"><i class="bi bi-calendar-event-fill"></i> Data de Nascimento</label>
                <input asp-for="DataNascimento" class="form-control" type="date" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label"><i class="bi bi-envelope-fill"></i> E-mail</label>
                <input asp-for="Email" class="form-control" placeholder="exemplo@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Endereco" class="form-label"><i class="bi bi-geo-alt-fill"></i> Endereço</label>
                <input asp-for="Endereco" class="form-control" placeholder="Rua Exemplo, 123 - Bairro - Cidade/UF" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-secondary btn-custom me-2">Cancelar</a>
            <button type="submit" class="btn btn-success btn-custom">Salvar</button>
        </div>
    </form>
</div>

<!-- Scripts necessários -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.8/jquery.inputmask.min.js"></script>
<script>
    $(document).ready(function () {
        $('#cpf').inputmask("999.999.999-99");
    });
</script>
