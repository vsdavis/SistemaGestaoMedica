@{
    ViewData["Title"] = "Registro";
}

<style>
    body {
        background: linear-gradient(to right, #eef2f3, #8e9eab);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-container {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        padding: 40px 30px;
        width: 100%;
        max-width: 400px;
    }

    .register-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 25px;
        text-align: center;
        color: #333;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-primary {
        border-radius: 10px;
        font-weight: 600;
        background-color: #3b82f6;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2563eb;
        }

    .alert {
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .logo {
        display: block;
        margin: 0 auto 20px auto;
        max-height: 60px;
    }

    .text-center a {
        text-decoration: none;
    }
</style>

<div class="register-container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/a/ab/Logo_TV_2015.png" alt="Logo" class="logo" />

    <div class="register-title">Crie sua conta</div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <form method="post" asp-action="Register">
        <div class="mb-3">
            <label for="Name" class="form-label">Nome</label>
            <input type="text" class="form-control" id="Name" name="name" placeholder="Seu nome" required />
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="email" placeholder="email@exemplo.com" required />
        </div>

        <div class="mb-4">
            <label for="Password" class="form-label">Senha</label>
            <input type="password" class="form-control" id="Password" name="password" placeholder="Senha" required />
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2">Registrar</button>

        <div class="mt-3 text-center">
            <span>Já tem uma conta?</span>
            <a href="/Account/Login" class="text-primary fw-bold">Faça login</a>
        </div>
    </form>
</div>
