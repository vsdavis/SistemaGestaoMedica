@model SistemaGestaoMedica.Models.Exame

@{
    ViewData["Title"] = "Editar Exame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    .form-container {
        max-width: 800px;
        margin: 30px auto;
        padding: 30px;
        border-radius: 10px;
        background-color: white;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }

    .form-header {
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e3e6f0;
    }

    .form-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .form-label {
        font-weight: 600;
        color: #5a5c69;
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 10px 15px;
    }

    .btn-submit {
        border-radius: 8px;
        padding: 10px 25px;
        font-weight: 500;
    }
</style>

<div class="form-container">
    <div class="form-header">
        <h1 class="form-title">
            <i class="fas fa-edit me-2"></i>@ViewData["Title"]
        </h1>
    </div>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Preco" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">R$</span>
                    <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                </div>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="PreparoNecessario" class="form-label"></label>
                <input asp-for="PreparoNecessario" class="form-control" />
                <span asp-validation-for="PreparoNecessario" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Ativo" />
                    <label class="form-check-label" asp-for="Ativo"></label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary btn-submit">
                <i class="fas fa-arrow-left me-1"></i>Voltar
            </a>
            <button type="submit" class="btn btn-primary btn-submit">
                <i class="fas fa-save me-1"></i>Salvar Alterações
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}