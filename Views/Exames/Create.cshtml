@model SistemaGestaoMedica.Models.Exame

@{
    ViewData["Title"] = "Cadastrar Novo Exame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    :root {
        --primary-color: #4e73df;
        --secondary-color: #f8f9fc;
        --accent-color: #2e59d9;
        --text-color: #5a5c69;
        --border-color: #e3e6f0;
    }

    body {
        background-color: var(--secondary-color);
    }

    .card {
        border: none;
        border-radius: 0.35rem;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        margin-top: 2rem;
    }

    .card-header {
        background-color: var(--primary-color);
        border-bottom: none;
        border-radius: 0.35rem 0.35rem 0 0 !important;
        padding: 1.25rem 1.5rem;
    }

        .card-header h4 {
            margin-bottom: 0;
            font-weight: 600;
        }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border-radius: 0.35rem;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border-color);
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-primary:hover {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
            transform: translateY(-1px);
        }

    .btn-secondary {
        padding: 0.5rem 1.5rem;
        font-weight: 500;
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .validation-summary-errors ul {
        padding-left: 0;
        list-style: none;
        margin-bottom: 1.5rem;
    }

    .validation-summary-errors li {
        color: #e74a3b;
        font-size: 0.875rem;
    }

    .field-validation-error {
        font-size: 0.875rem;
        color: #e74a3b;
        margin-top: 0.25rem;
        display: block;
    }

    .input-group-text {
        background-color: #eaecf4;
        color: var(--text-color);
    }

    .required-field::after {
        content: " *";
        color: #e74a3b;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header text-white">
                    <h4><i class="fas fa-flask me-2"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger validation-summary-errors"></div>

                        <div class="mb-4">
                            <h5 class="text-primary mb-3"><i class="fas fa-info-circle me-2"></i>Informações Básicas</h5>

                            <div class="form-group mb-3">
                                <label asp-for="Nome" class="form-label required-field"></label>
                                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do exame" required />
                                <span asp-validation-for="Nome" class="field-validation-error"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Descricao" class="form-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descreva o exame (opcional)"></textarea>
                                <span asp-validation-for="Descricao" class="field-validation-error"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="text-primary mb-3"><i class="fas fa-calculator me-2"></i>Detalhes do Exame</h5>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label asp-for="Preco" class="form-label required-field"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">R$</span>
                                            <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0" placeholder="0,00" required />
                                        </div>
                                        <span asp-validation-for="Preco" class="field-validation-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label asp-for="PreparoNecessario" class="form-label"></label>
                                        <input asp-for="PreparoNecessario" class="form-control" placeholder="Preparo necessário (se houver)" />
                                        <span asp-validation-for="PreparoNecessario" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group form-switch mb-4">
                            <input class="form-check-input" type="checkbox" role="switch" asp-for="Ativo" checked />
                            <label class="form-check-label ms-2" asp-for="Ativo"></label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center border-top pt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Voltar para a lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Cadastrar Exame
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Exemplo de validação customizada
        (function () {
            'use strict';

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation');

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}