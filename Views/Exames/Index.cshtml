@model IEnumerable<SistemaGestaoMedica.Models.Exame>

@{
    ViewData["Title"] = "Exames";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    .exames-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .header-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .table-exames {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }

        .table-exames thead {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
        }

        .table-exames th {
            padding: 15px;
            font-weight: 500;
        }

        .table-exames td {
            padding: 12px 15px;
            vertical-align: middle;
        }

    .badge-ativo {
        background-color: #1cc88a;
    }

    .badge-inativo {
        background-color: #e74a3b;
    }

    .action-buttons .btn {
        padding: 5px 10px;
        margin: 0 3px;
        font-size: 0.85rem;
    }

    .search-card {
        background-color: #f8f9fc;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 30px;
    }
</style>

<div class="exames-container">
    <div class="header-section">
        <h1 class="header-title">
            <i class="fas fa-flask me-2"></i>Cadastro de Exames
        </h1>
        <a href="@Url.Action("Create")" class="btn btn-success btn-custom">
            <i class="fas fa-plus me-1"></i> Novo Exame
        </a>
    </div>

    <div class="search-card">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="searchString" class="form-control" placeholder="Pesquisar exames..." value="@ViewData["CurrentFilter"]">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i>Pesquisar
                </button>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-exames">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                        <td>
                            @if (item.Ativo)
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inativo</span>
                            }
                        </td>
                        <td class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalhes">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Desativar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>