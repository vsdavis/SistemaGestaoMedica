@model SistemaGestaoMedica.Models.Exame

@{
    ViewData["Title"] = "Desativar Exame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    .delete-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 30px;
        border-radius: 10px;
        background-color: white;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }

    .delete-header {
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e3e6f0;
    }

    .delete-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .details-list dt {
        font-weight: 600;
        color: #5a5c69;
    }

    .details-list dd {
        margin-bottom: 15px;
    }

    .btn-submit {
        border-radius: 8px;
        padding: 10px 25px;
        font-weight: 500;
    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h1 class="delete-title">
            <i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]
        </h1>
    </div>

    <h3 class="text-danger mb-4">Tem certeza que deseja desativar este exame?</h3>

    <dl class="details-list">
        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd>@Html.DisplayFor(model => model.Descricao)</dd>

        <dt>@Html.DisplayNameFor(model => model.Preco)</dt>
        <dd>R$ @Html.DisplayFor(model => model.Preco)</dd>

        <dt>@Html.DisplayNameFor(model => model.PreparoNecessario)</dt>
        <dd>@Html.DisplayFor(model => model.PreparoNecessario)</dd>

        <dt>Status</dt>
        <dd>
            @if (Model.Ativo)
            {
                <span class="badge bg-success">Ativo</span>
            }
            else
            {
                <span class="badge bg-danger">Inativo</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary btn-submit">
                <i class="fas fa-arrow-left me-1"></i>Voltar
            </a>
            <button type="submit" class="btn btn-danger btn-submit">
                <i class="fas fa-trash-alt me-1"></i>Confirmar Desativação
            </button>
        </div>
    </form>
</div>