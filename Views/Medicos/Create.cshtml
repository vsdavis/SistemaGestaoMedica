@model SistemaGestaoMedica.Models.Medico

@{
    ViewData["Title"] = "Cadastrar Médico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .create-card {
        max-width: 900px;
        margin: 40px auto;
        padding: 32px;
        border-radius: 16px;
        background: #ffffff;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
    }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 12px;
    }

    .btn-custom {
        border-radius: 12px;
        padding: 10px 24px;
        font-weight: 500;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .header-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 24px;
        color: #333;
    }
</style>

<div class="create-card">
    <div class="header-title">
        <i class="bi bi-person-badge-fill"></i> Cadastrar Médico
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Nome" class="form-label">
                    <i class="bi bi-person-fill"></i> Nome Completo
                </label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo do médico" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DataNascimento" class="form-label">
                    <i class="bi bi-calendar-event-fill"></i> Data de Nascimento
                </label>
                <input asp-for="DataNascimento" type="date" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CPF" class="form-label">
                    <i class="bi bi-credit-card-fill"></i> CPF
                </label>
                <input asp-for="CPF" class="form-control" placeholder="XXX.XXX.XXX-XX" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Especialidade" class="form-label">
                    <i class="bi bi-briefcase-medical-fill"></i> Especialidade
                </label>
                <input asp-for="Especialidade" class="form-control" placeholder="Ex: Clínica Geral, Cardiologia..." />
                <span asp-validation-for="Especialidade" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CRM" class="form-label">
                    <i class="bi bi-file-earmark-medical-fill"></i> CRM
                </label>
                <input asp-for="CRM" class="form-control" placeholder="Número do CRM" />
                <span asp-validation-for="CRM" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label">
                    <i class="bi bi-envelope-fill"></i> E-mail
                </label>
                <input asp-for="Email" class="form-control" type="email" placeholder="exemplo@dominio.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Senha" class="form-label">
                    <i class="bi bi-shield-lock-fill"></i> Senha
                </label>
                <input asp-for="Senha" class="form-control" type="password" placeholder="Senha de acesso" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Telefone" class="form-label">
                    <i class="bi bi-telephone-fill"></i> Telefone
                </label>
                <input asp-for="Telefone" class="form-control" placeholder="(XX) XXXXX-XXXX" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Endereco" class="form-label">
                    <i class="bi bi-geo-alt-fill"></i> Endereço
                </label>
                <input asp-for="Endereco" class="form-control" placeholder="Rua Exemplo, 123 - Bairro - Cidade/UF" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Cidade" class="form-label">
                    <i class="bi bi-building"></i> Cidade
                </label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label asp-for="Estado" class="form-label">
                    <i class="bi bi-flag-fill"></i> UF
                </label>
                <input asp-for="Estado" class="form-control" maxlength="2" placeholder="UF" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-secondary btn-custom me-2">
                <i class="bi bi-x-circle-fill"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-success btn-custom">
                <i class="bi bi-save-fill"></i> Salvar
            </button>
        </div>
    </form>
</div>
