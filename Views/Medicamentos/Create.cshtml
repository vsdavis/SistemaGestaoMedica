@model SistemaGestaoMedica.Models.Medicamento

@{
    ViewData["Title"] = "Cadastrar Medicamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    .medicamento-form-container {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
    }

    .form-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08);
    }

    .form-card-header {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        padding: 20px;
    }

        .form-card-header h2 {
            margin: 0;
            font-weight: 600;
        }

    .form-card-body {
        padding: 30px;
        background-color: white;
    }

    .form-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #4e73df;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 1px solid #e3e6f0;
    }

    .form-label {
        font-weight: 500;
        color: #5a5c69;
        margin-bottom: 8px;
    }

    .required-field::after {
        content: " *";
        color: #e74a3b;
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #d1d3e2;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: #bac8f3;
            box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
        }

    .input-group-text {
        background-color: #f8f9fc;
        border: 1px solid #d1d3e2;
    }

    .form-switch .form-check-input {
        width: 3em;
        height: 1.5em;
        margin-left: 0;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        padding-top: 20px;
        margin-top: 20px;
        border-top: 1px solid #e3e6f0;
    }

    .btn-submit {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        border: none;
        padding: 10px 25px;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(78, 115, 223, 0.3);
        }

    .btn-cancel {
        background-color: #f8f9fc;
        color: #5a5c69;
        border: 1px solid #d1d3e2;
        padding: 10px 25px;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background-color: #e2e6ea;
            transform: translateY(-2px);
        }

    .validation-summary-errors ul {
        padding-left: 0;
        list-style: none;
    }

    .validation-summary-errors li {
        color: #e74a3b;
        font-size: 0.9rem;
    }

    .field-validation-error {
        font-size: 0.85rem;
        color: #e74a3b;
        margin-top: 5px;
        display: block;
    }

    .input-has-error {
        border-color: #e74a3b !important;
    }

    .input-has-success {
        border-color: #1cc88a !important;
    }
</style>

<div class="medicamento-form-container">
    <div class="form-card">
        <div class="form-card-header">
            <h2><i class="fas fa-pills me-2"></i>@ViewData["Title"]</h2>
        </div>
        <div class="form-card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="form-section">
                    <h5 class="section-title"><i class="fas fa-info-circle me-2"></i>Informações Básicas</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nome" class="form-label required-field"></label>
                            <input asp-for="Nome" class="form-control" required />
                            <span asp-validation-for="Nome" class="field-validation-error"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Fabricante" class="form-label required-field"></label>
                            <input asp-for="Fabricante" class="form-control" required />
                            <span asp-validation-for="Fabricante" class="field-validation-error"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descricao" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-section">
                    <h5 class="section-title"><i class="fas fa-tags me-2"></i>Dados Comerciais</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Preco" class="form-label required-field"></label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0.01" required />
                            </div>
                            <span asp-validation-for="Preco" class="field-validation-error"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="QuantidadeEstoque" class="form-label"></label>
                            <input asp-for="QuantidadeEstoque" class="form-control" type="number" min="0" />
                            <span asp-validation-for="QuantidadeEstoque" class="field-validation-error"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="DataValidade" class="form-label"></label>
                            <input asp-for="DataValidade" class="form-control" type="date" />
                            <span asp-validation-for="DataValidade" class="field-validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h5 class="section-title"><i class="fas fa-shield-alt me-2"></i>Regulação</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Tarja" class="form-label"></label>
                            <select asp-for="Tarja" class="form-select">
                                <option value="">Selecione a tarja...</option>
                                <option value="Livre">Livre Comercialização</option>
                                <option value="Vermelha">Tarja Vermelha</option>
                                <option value="Preta">Tarja Preta</option>
                            </select>
                            <span asp-validation-for="Tarja" class="field-validation-error"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegistroAnvisa" class="form-label"></label>
                            <input asp-for="RegistroAnvisa" class="form-control" />
                            <span asp-validation-for="RegistroAnvisa" class="field-validation-error"></span>
                        </div>
                    </div>
                </div>

                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" type="checkbox" id="Ativo" asp-for="Ativo" checked />
                    <label class="form-check-label" for="Ativo">Medicamento ativo no sistema</label>
                </div>

                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-arrow-left me-2"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-submit text-white">
                        <i class="fas fa-save me-2"></i> Cadastrar Medicamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


    <script>
        // Validação em tempo real
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('.form-control, .form-select');

            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    if (this.checkValidity()) {
                        this.classList.remove('input-has-error');
                        this.classList.add('input-has-success');
                    } else {
                        this.classList.remove('input-has-success');
                        this.classList.add('input-has-error');
                    }
                });
            });

            // Validação ao enviar o formulário
            const form = document.querySelector('.needs-validation');
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();

                    // Adiciona classes de erro para todos os campos inválidos
                    form.querySelectorAll(':invalid').forEach(el => {
                        el.classList.add('input-has-error');
                    });
                }

                form.classList.add('was-validated');
            }, false);
        });
    </script>
}